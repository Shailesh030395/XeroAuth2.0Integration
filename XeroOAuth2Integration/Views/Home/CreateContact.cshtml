@model XeroOAuth2Integration.Models.ContactViewModel

@{
    ViewBag.Title = "CreateContact";
}

@using (Html.BeginForm())
{
    <br />
    <br />
    <div class="container">
        @if (ViewBag.ContactId!=null)
        {
            <h3 class="text-success">Contact created successfully</h3>
            <a href="https://go.xero.com/Contacts/View/@ViewBag.ContactId">Goto xero contact</a>
        }
        <br />
        <input type="hidden" value="@ViewBag.tenantId" />
        <div class="form-group">
            <label for="email">Name</label>
            @Html.TextBoxFor(a => a.ContactName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="pwd">Email:</label>
            @Html.TextBoxFor(a => a.ContactEmail, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </div>
}


